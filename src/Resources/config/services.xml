<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Gateway  -->

        <service id="solu1Paytrace\Gateways\CreditCard">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceTransactionService" />
            <argument type="service" id="solu1Paytrace\Service\PayTraceConfigService"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <tag name="shopware.payment.method"/>
        </service>

        <service id="solu1Paytrace\Gateways\AchEcheck">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceTransactionService" />
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceConfigService"/>
            <tag name="shopware.payment.method"/>
        </service>

        <!-- Gateway END  -->


        <!-- Entity Definitions -->

        <service id="solu1Paytrace\Core\Content\Transaction\PayTraceTransactionDefinition">
            <tag name="shopware.entity.definition" entity="payTrace_transaction"/>
        </service>

        <service id="solu1Paytrace\Core\Content\CustomerVault\CustomerVaultDefinition">
            <tag name="shopware.entity.definition" entity="payTrace_customer_vault"/>
        </service>

        <!-- Entity Definitions END -->

        <service id="solu1Paytrace\Subscriber\CheckoutConfirmEventSubscriber">
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceCustomerVaultService" />
            <argument type="service" id="solu1Paytrace\Service\PayTraceConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>


        <service id="solu1Paytrace\Subscriber\OrderPaymentStatusChangeSubscriber">
            <argument type="service" id="solu1Paytrace\Service\PayTraceTransactionService" />
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="payment_method.repository"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <argument type="service" id="PayTracePayment.logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="solu1Paytrace\Storefront\Controller\PayTraceController" public="true">
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceConfigService"/>
            <argument type="service" id="solu1Paytrace\Library\Constants\ValidatorUtility"/>
            <argument type="service" id="PayTracePayment.logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>

        </service>

        <service id="solu1Paytrace\Controller\PayTraceSavedCardsController">
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceCustomerVaultService" />
            <argument type="service" id="solu1Paytrace\Service\PayTraceConfigService"/>
            <tag name="controller.service_arguments"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="solu1Paytrace\Storefront\Controller\TestApiConnectionController" public="true">
            <argument type="service" id="solu1Paytrace\Service\PayTraceApiService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="solu1Paytrace\Service\PayTraceConfigService">
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
        </service>

        <service id="solu1Paytrace\Service\PayTraceApiService">
            <argument type="service" id="solu1Paytrace\Service\PayTraceConfigService"/>
            <argument type="service" id="solu1Paytrace\Service\PayTraceCustomerVaultService"/>
            <argument type="service" id="PayTracePayment.logger"/>

        </service>

        <service id="solu1Paytrace\Service\PayTraceTransactionService">
            <argument type="service" id="payTrace_transaction.repository"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="order_transaction.repository" />
        </service>

        <service id="solu1Paytrace\Service\PayTraceCustomerVaultService">
            <argument type="service" id="payTrace_customer_vault.repository"/>
            <argument type="service" id="PayTracePayment.logger"/>
        </service>

        <!-- Logger  -->

        <service id="PayTracePayment.logger" class="Monolog\Logger">
            <argument type="string">PayTrace</argument>
            <argument type="collection">
                <argument type="service" id="PayTracePayment.rotatingHandler"/>
            </argument>
        </service>

        <service id="PayTracePayment.rotatingHandler" class="Monolog\Handler\RotatingFileHandler">
            <argument type="string">%kernel.logs_dir%/PayTracePayment-%kernel.environment%.log</argument>
        </service>

        <!-- Logger END -->

        <!-- Validator  -->
        <service id="solu1Paytrace\Library\Constants\ValidatorUtility">
            <argument type="service" id="validator"/>
            <argument type="service" id="PayTracePayment.logger"/>
        </service>
        <!-- Validator END -->


    </services>
</container>
