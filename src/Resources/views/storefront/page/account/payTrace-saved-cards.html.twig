            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .sc-form-card-body {
                padding: 1.5rem;
            }

            .sc-form-col {
                margin-bottom: 1rem;
            }
        }

    </style>

