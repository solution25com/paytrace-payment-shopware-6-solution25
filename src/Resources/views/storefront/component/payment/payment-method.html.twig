{% sw_extends '@Storefront/storefront/component/payment/payment-method.html.twig' %}

{% block component_payment_method_field %}
    {{ parent() }}

    {% set paymentMethod = payment.formattedHandlerIdentifier %}

    {% set paymentMethodContext = context.paymentMethod.formattedHandlerIdentifier %}


    {% if paymentMethod == 'handler_paytrace_creditcard' and paymentMethodContext == 'handler_paytrace_creditcard' %}
        {% if page.extensions.payTrace_payment is defined and page.extensions.payTrace_payment.template is not null %}
            {% sw_include page.extensions.payTrace_payment.template %}
        {% endif %}
    {% endif %}

    {% if paymentMethod == 'handler_paytrace_achecheck' and paymentMethodContext == 'handler_paytrace_achecheck' %}
        {% if page.extensions.payTrace_payment is defined and page.extensions.payTrace_payment.template is not null %}
            {% sw_include page.extensions.payTrace_payment.template %}
        {% endif %}
    {% endif %}
{% endblock %}