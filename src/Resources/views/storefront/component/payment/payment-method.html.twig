{% sw_extends '@Storefront/storefront/component/payment/payment-method.html.twig' %}

{% block component_payment_method_label %}
    {{ parent() }}

    {% if payment.formattedHandlerIdentifier in ['handler_paytrace_creditcard', 'handler_paytrace_achecheck']
        and context.paymentMethod.formattedHandlerIdentifier == payment.formattedHandlerIdentifier
        and page.extensions.payTrace_payment is defined
        and page.extensions.payTrace_payment.template %}
        {% sw_include page.extensions.payTrace_payment.template %}
    {% endif %}
{% endblock %}
